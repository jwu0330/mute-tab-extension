{
  "manifest_version": 3,
  "name": "Tab Mute Controller",
  "version": "2.0",
  "description": "控制分頁靜音狀態，並強制維持靜音避免自動解除。",
  "permissions": ["tabs", "storage", "activeTab"],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}
